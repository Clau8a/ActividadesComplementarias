@model ActividadesComplementarias.Models.Carrera

@{
    ViewBag.Title = "CAS - Editar Carrera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-4 col-lg-offset-4">
    <h2>Editar Carrera</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="editor-label">
            <label>Clave Carrea</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idCarrera)
            @Html.ValidationMessageFor(model => model.idCarrera)
        </div>

        <div class="editor-label">
            <label>Carrera</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombreCarrera)
            @Html.ValidationMessageFor(model => model.nombreCarrera)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.departamento, "Departamento")
        </div>
        <div class="editor-field">
            @Html.DropDownList("departamento", String.Empty)
            @Html.ValidationMessageFor(model => model.departamento)
        </div>

        <div class="botones">
            <input class="btn-success" type="submit" value="Guardar" />
        </div>
    }

</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

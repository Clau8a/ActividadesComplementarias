@model IEnumerable<ActividadesComplementarias.Models.Carrera>

@{
    ViewBag.Title = "CAS - Carrera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Carrera</h2>

<p>
    @Html.ActionLink("Crear Nueva Carrera", "Create")
</p>
<table>
    <tr>
        <th>
            <label>Clave Carrera</label>
        </th>
        <th>
            <label>Carrera</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idCarrera)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreCarrera)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idCarrera }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.idCarrera }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.idCarrera })
        </td>
    </tr>
}

</table>

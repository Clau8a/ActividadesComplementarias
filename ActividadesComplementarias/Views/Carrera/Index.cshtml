@model IEnumerable<ActividadesComplementarias.Models.Carrera>

@{
    ViewBag.Title = "CAS - Carrera";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="col-lg-8 col-lg-offset-2">
    <h2>Carrera</h2>
    <div id="agregar">
        <span><a href="/Carrera/Create" class="addNew"><span class="glyphicon glyphicon-plus"></span></a> <b>  Agregar Nuevo</b></span>
    </div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                <label>Clave Carrera</label>
            </th>
            <th>
                <label>Carrera</label>
            </th>
            <th>
                <label>Departamento</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.idCarrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreCarrera)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento1.nombreDepartamento)
                </td>
                <td>
                    <a href="/Carrera/Edit/@item.idCarrera"><span id="edit" class="glyphicon glyphicon-pencil cuadrado"></span></a>
                    <a href="/Carrera/Delete/@item.idCarrera"><span id="delete" class="glyphicon glyphicon-remove cuadrado"></span></a>
                </td>
            </tr>
        }

    </table>
</div>
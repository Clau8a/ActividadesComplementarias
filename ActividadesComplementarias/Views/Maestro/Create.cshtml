@model ActividadesComplementarias.Models.Maestros

@{
    ViewBag.Title = "ECAS";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Maestro</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Maestros</legend>

        <div class="editor-label">
            <label>Clave Maestro</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idMaestro)
            @Html.ValidationMessageFor(model => model.idMaestro)
        </div>

        <div class="editor-label">
            <label>Nombre Maestro</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombreMaestro)
            @Html.ValidationMessageFor(model => model.nombreMaestro)
        </div>

        <div class="editor-label">
            <label>Departamento</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("departamentoMaestro", String.Empty)
            @Html.ValidationMessageFor(model => model.departamentoMaestro)
        </div>

        <div class="editor-label">
            <label>Tipo</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("tipoMaestro", String.Empty)
            @Html.ValidationMessageFor(model => model.tipoMaestro)
        </div>

        <div class="editor-label">
           <label>Contraseña</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.contraseñaMaestro)
            @Html.ValidationMessageFor(model => model.contraseñaMaestro)
        </div>

        <div class="editor-label">
            <label>Salt Contraseña</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.saltContraseña)
            @Html.ValidationMessageFor(model => model.saltContraseña)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

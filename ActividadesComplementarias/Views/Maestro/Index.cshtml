@model IEnumerable<ActividadesComplementarias.Models.Maestros>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            <label>Clave Maestro</label>
        </th>
        <th>
            <label>Nombre Maestro</label>
        </th>
        <th>
            <label>Departamento</label>
        </th>
        <th>
            <label>Tipo</label>
        </th>
        <th>    </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idMaestro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreMaestro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.nombreDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMaestro1.tipoMaestro1)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.idMaestro }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.idMaestro })
            </td>
        </tr>
    }

</table>

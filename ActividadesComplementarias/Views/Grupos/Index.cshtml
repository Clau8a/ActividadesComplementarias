@model IEnumerable<ActividadesComplementarias.Models.Grupos>

@{
    ViewBag.Title = "Grupos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-10 col-lg-offset-1">
    <h2>Grupos</h2>

    <div id="agregar">
        <span><a class="addNew" data-toggle="modal" data-target=".Add-Grupo"><span class="glyphicon glyphicon-plus"></span></a> <b>  Agregar Nuevo</b></span>
    </div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Clave Grupo</th>
            <th>Grupo</th>
            <th>Maestro</th>
            <th>Cupo</th>
            <th>No. Inscritos</th>
            <th>Horario</th>
            <th>Lugar</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idGrupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreGrupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Maestros.nombreMaestro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.inscritos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.horario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lugar)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id=item.idGrupo }) |
                    <a class="btn btn-success" href="/Grupos/Inscritos/@item.idGrupo"><b>Listas</b></a> 
                </td>
            </tr>
        }

    </table>
</div>

<div class="modal fade Add-Grupo" id="Add-Grupo" tabindex="-1" role="dialog" aria-labelledby="Add-Grupo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 id="modalTitle" class="modal-title">Agregar Grupo</h4>
            </div>
            <div class="modal-body">

                @Html.Action("Create", new {  id=ViewBag.idActComple } )
            </div>

        </div>
    </div>
</div>


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/css/estilo.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="#">ECAS</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        Logueado como
                        <a href="#" class="navbar-link">@Session["uxid"]</a>
                    </p>
                    <ul class="nav">
                        <li>
                            <a href="#">INICIO</a>
                        </li>
                        <li>
                            <a href="#">SOBRE NOSOTROS</a>
                        </li>
                        <li>
                            <a href="#">CONTACTO</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="body" class="container-fluid" >
        <div class="row-fluid">
            <div class="span3">
                <div class="well">
                    <ul class="nav nav-list">
                        <li class="nav-header">MENU</li>
                        <li>@Html.ActionLink("Departamentos", "Index", "Departamento")</li>
                        <li>@Html.ActionLink("Carreras", "Index", "Carrera")</li>
                        <li>@Html.ActionLink("Actividad Complementaria", "Index", "ActividadComplementaria")</li>
                        <li>@Html.ActionLink("Estudiante", "Index", "Estudiante")</li>
                        <li>@Html.ActionLink("Maestros", "Index", "Maestros")</li>
                    </ul>
                </div>
            </div>
            <div class="span9">
                @RenderSection("featured", required: false)
                <div class="row-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false) 
</body>
</html>

@model ActividadesComplementarias.Models.ActividadCursada

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-6 col-lg-offset-3" style="text-align:left;">
    <h2>Inscripción</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="editor-label">
            <label>id</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idAvtividadCursada)
            @Html.ValidationMessageFor(model => model.idAvtividadCursada)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idActComplementaria, "Actividad Complementaria")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idActComplementaria", String.Empty)
            @Html.ValidationMessageFor(model => model.idActComplementaria)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idEstudiante, "Estudiante")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idEstudiante", String.Empty)
            @Html.ValidationMessageFor(model => model.idEstudiante)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.periodo, "Periodo")
        </div>
        <div class="editor-field">
            <input class="text-box single-line" id="periodo" name="periodo" type="text" value="@ViewBag.periodo" readonly>
            
            @Html.ValidationMessageFor(model => model.periodo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.mestro, "Maestro")
        </div>
        <div class="editor-field">
            @Html.DropDownList("mestro", String.Empty)
            @Html.ValidationMessageFor(model => model.mestro)
        </div>

        <div class="botones">
            <input class="btn-success" type="submit" value="Confirmar" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

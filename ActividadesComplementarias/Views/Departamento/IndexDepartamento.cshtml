@model IEnumerable<ActividadesComplementarias.Models.Departamento>

@{
    ViewBag.Title = "CAS - Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departamento</h2>

<p>
    @Html.ActionLink("Crear nuevo Departamento", "Create")
</p>
<table>
    <tr>
        <th>
            <label>ID Departamento</label>
        </th>
        <th>
           <label>Nombre de Departamento</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idDepartamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombreDepartamento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idDepartamento }) |
            @Html.ActionLink("Detalles", "Details", new {id=item.idDepartamento}) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idDepartamento  })
        </td>
    </tr>
}

</table>

@model IEnumerable<ActividadesComplementarias.Models.Departamento>

@{
    ViewBag.Title = "CAS - Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-8 col-lg-offset-2">
    <h2>Departamento</h2>
    <div id="agregar">
        <span><a href="/Departamento/Create" class="addNew"><span class="glyphicon glyphicon-plus"></span></a> <b>  Agregar Nuevo</b></span>
    </div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                <label>Clave Departamento</label>
            </th>
            <th>
                <label>Departamento</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.idDepartamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreDepartamento)
                </td>
                <td>
                    <a  href="/Departamento/Edit/@item.idDepartamento"><span id="edit" class="glyphicon glyphicon-pencil cuadrado"></span></a> 
                    <a  href="/Departamento/Delete/@item.idDepartamento"><span id="delete" class="glyphicon glyphicon-remove cuadrado"></span></a>
                </td>
            </tr>
}

    </table>
</div>
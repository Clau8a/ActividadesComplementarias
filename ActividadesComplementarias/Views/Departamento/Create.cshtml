@model ActividadesComplementarias.Models.Departamento

@{
    ViewBag.Title = "CAS - Crear Nuevo Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-4 col-lg-offset-4">

    <h3>Crear Nuevo Departamento</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="editor-label">
            <label>ID Departamento</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idDepartamento, "", new { @class = "inputForm" })
            @Html.ValidationMessageFor(model => model.idDepartamento)
        </div>

        <div class="editor-label">
            <label>Nombre de Departamento</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombreDepartamento)
            @Html.ValidationMessageFor(model => model.nombreDepartamento)
        </div>

        <div class="botones">
            <input class="btn-success" type="submit" value="Guardar" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

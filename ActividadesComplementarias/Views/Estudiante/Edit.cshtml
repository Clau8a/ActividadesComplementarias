@model ActividadesComplementarias.Models.Estudiante

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Estudiante</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="editor-label">
            <label>Número de Control</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idEstudiante)
            @Html.ValidationMessageFor(model => model.idEstudiante)
        </div>

        <div class="editor-label">
            <label>Nombre Estudiante</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombreEstudiante)
            @Html.ValidationMessageFor(model => model.nombreEstudiante)
        </div>

        <div class="editor-label">
            <label>Carrera</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("carrera", String.Empty)
            @Html.ValidationMessageFor(model => model.carrera)
        </div>

        <div class="editor-label">
            <label>Status</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.estatusEstudiante)
            @Html.ValidationMessageFor(model => model.estatusEstudiante)
        </div>

        <div class="editor-label">
            <label>Num. de Créditos</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.creditosComplementarios)
            @Html.ValidationMessageFor(model => model.creditosComplementarios)
        </div>
        <div class="editor-label">
            <label>Contraseña</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.contraseñaEstudiante)
            @Html.ValidationMessageFor(model => model.contraseñaEstudiante)
        </div>

        <div class="editor-label">
            <label>Salt Contraseña</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.saltContraseña)
            @Html.ValidationMessageFor(model => model.saltContraseña)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

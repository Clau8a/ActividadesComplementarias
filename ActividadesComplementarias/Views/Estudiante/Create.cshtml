@model ActividadesComplementarias.Models.Estudiante

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/bootstrap-switch.css" rel="stylesheet" />
<div class="col-lg-4 col-lg-offset-4">
    <h2>Crear Estudiante</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="editor-label">
            <label>Numero de Control Estudiante</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.idEstudiante)
            @Html.ValidationMessageFor(model => model.idEstudiante)
        </div>

        <div class="editor-label">
            <label>Nombre de Estudiante</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nombreEstudiante)
            @Html.ValidationMessageFor(model => model.nombreEstudiante)
        </div>

        <div class="editor-label">
            <label>Carrera</label>
        </div>
        <div class="editor-field">
            @Html.DropDownList("carrera", "sin seleccionar")
            @Html.ValidationMessageFor(model => model.carrera)
        </div>

        <div class="editor-label">
            <label>Estatus estudiante</label>
        </div>
        <div class="editor-field">
            <input type="checkbox" data-on-text="Activo" data-off-text="No"  data-val="true" data-val-required="El campo estatusEstudiante es obligatorio." id="estatusEstudiante" name="estatusEstudiante" value="true" checked>
          
            @Html.ValidationMessageFor(model => model.estatusEstudiante)
        </div>

        <div class="editor-label">
            <label>Contraseña</label>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.contraseñaEstudiante)
            @Html.ValidationMessageFor(model => model.contraseñaEstudiante)
        </div>

        <div class="botones">
            <input class="btn-success" type="submit" value="Create" />
        </div>

    }

</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
<script src="~/Scripts/jquery-1.11.3.js"></script>
<script src="~/Content/js/bootstrap-switch.js"></script>
<script>
    $("[name='estatusEstudiante']").bootstrapSwitch();
</script>